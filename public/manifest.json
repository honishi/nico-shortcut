{
  "name": "ニコ生ショートカット",
  "version": "0.1.1",
  "manifest_version": 3,
  "description": "ニコニコ生放送の PC 用放送視聴ページで、キーボードショートカットが利用可能になります。",
  "icons": {
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "system.display",
    "storage"
  ],
  "host_permissions": [
    "https://live.nicovideo.jp/watch/*"
  ],
  "content_scripts": [
    {
      "js": [
        "./content.js"
      ],
      "css": [
        "./css/main.css"
      ],
      "matches": [
        "https://live.nicovideo.jp/watch/*"
      ]
    }
  ],
  "background": {
    "service_worker": "./background.js"
  },
  "options_ui": {
    "page": "./html/option.html"
  },
  "action":{
    "default_popup":"./html/popup.html"
  }
}