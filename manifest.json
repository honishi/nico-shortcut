{
  "name": "nico-shortcut",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "nico-shortcut",
  "permissions": [
    "tabs",
    "system.display"
  ],
  "host_permissions": [
    "https://live.nicovideo.jp/watch/*"
  ],
  "content_scripts": [
    {
      "js": [
        "./content.js",
        "./notiflix/notiflix-3.2.5.min.js"
      ],
      "css": [
        "./notiflix/notiflix-3.2.5.min.css"
      ],
      "matches": [
        "https://live.nicovideo.jp/watch/*"
      ]
    }
  ],
  "background": {
    "service_worker": "./background.js"
  }
}